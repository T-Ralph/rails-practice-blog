<h1>Categories</h1>
<small><%= link_to 'Add New', new_category_path if session_state? && session_user.admin? %></small>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Articles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= link_to category.name, category_path(category) %></td>
                <td><%= category.articles.count %></td>
                <td>
                  <%= link_to 'Show', category_path(category) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= will_paginate @categories %>